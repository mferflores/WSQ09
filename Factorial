#include <iostream>
using namespace std;
int main()
{
  int x , factorial=1;

    cout << "Please enter a positive integer:  " << endl;
    cin >> x;

    for(int a=1; a<=x; a++)
    {
        factorial=factorial*a;
    }

cout << "The factorial is " << factorial << endl;
cout << "One more time?(y/n)";
char answer;
cin >> answer;
if (answer=='n') {
  cout<<"Fine! Have an awesome day, BE AWESOME!"<<endl;
}
else
{
do{
   int x , factorial=1;
   char yes, no;

    cout << "Please enter a positive integer:  " << endl;
    cin >> x;

    for(int a=1; a<=x; a++)
    {
        factorial=factorial*a;
    }
    cout << "The factorial is " << factorial << endl;
    cout << "One more time?(y/n)";
    char answer;
    cin >> answer;
}while(answer=='y');
}

